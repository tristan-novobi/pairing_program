<odoo>
    <record id="view_wizard_so_create_prq" model="ir.ui.view">
        <field name="name">so.create.purchase.request.wizard.form</field>
        <field name="model">so.create.purchase.request.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Purchase Request">
                <group>
                    <field name="sale_order_id" readonly="1"/>
                    <field name="note"/>
                </group>
                <footer>
                    <button name="action_confirm" string="Create" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
