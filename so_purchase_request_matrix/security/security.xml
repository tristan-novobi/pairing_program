<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    <record id="group_prq_sales_user" model="res.groups">
        <field name="name">PRQ Sales User</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="group_prq_purchase_user" model="res.groups">
        <field name="name">PRQ Purchase User</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="group_prq_purchase_manager" model="res.groups">
        <field name="name">PRQ Purchase Manager (Approver)</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <!-- Record Rules -->
    <record id="rule_prq_company_only" model="ir.rule">
        <field name="name">Purchase Request multi-company</field>
        <field name="model_id" ref="model_so_purchase_request"/>
        <field name="domain_force">[('company_id', 'in', company_ids)]</field>
        <field name="groups" eval="[(4, ref('group_prq_sales_user')), (4, ref('group_prq_purchase_user')), (4, ref('group_prq_purchase_manager'))]"/>
    </record>
</odoo>

